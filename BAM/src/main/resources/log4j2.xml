<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- changing appender class from org.apache.log4j.FileAppender -->
	<appender name="FILE" class="org.apache.log4j.FileAppender">
		<param name="File" value="/log4j_logs/BAM_Phoenix_log.html" />
		<!-- changing layout from HtmlLayout -->
		<layout class="org.apache.log4j.HTMLLayout"></layout>
		<!-- <layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss ZZZ} %F.%L level:%-5p%m" />
		</layout> -->
	</appender>
	<root>
		<level value="INFO" />
		<appender-ref ref="FILE" />
	</root>
</log4j:configuration>